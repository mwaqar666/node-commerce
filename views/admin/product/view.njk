{% extends '../layout/master.njk' %}

{% block content %}
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>{{ parentPageTitle }}</strong> {{ title }}
                    </h2>
                </div>
                <div class="body">
                    <div class="row">
                        <div class="col-xl-3 col-lg-4 col-md-12">
                            <div class="preview preview-pic tab-content">
                                <div class="tab-pane active" id="primary-image">
                                    <img src="{{ product.image }}" class="img-fluid" alt>
                                </div>
                                <div class="tab-pane" id="product-1">
                                    <img src="{{ product.image }}" class="img-fluid" alt>
                                </div>
                            </div>
                            <ul class="preview thumbnail nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#primary-image">
                                        <img src="{{ product.image }}" alt>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#product-1">
                                        <img src="{{ product.image }}" alt>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-12">
                            <div class="product details">
                                <h3 class="product-title mb-0">{{ product.name }}</h3>
                                <p class="price mt-0">Current Price:
                                    {% if product.discountPrice > 0.00 %}
                                        <span class="col-amber">
                                            <del>{{ product.regularPrice }}</del>
                                        </span>
                                    {% else %}
                                        <span class="col-amber">{{ product.regularPrice }}</span>
                                    {% endif %}
                                    {% if product.discountPrice > 0.00 %}
                                        <span class="col-amber">{{ product.discountPrice }}</span>
                                    {% endif %}
                                </p>
                                <hr>
                                <p class="product-description">{{ product.description | safe }}</p>
                                <table class="table table-bordered" id="product-attributes" style="color: black">
                                    <tbody>
                                        <tr>
                                            <td>Weight</td>
                                            <td>{{ product.weight }} lbs</td>
                                        </tr>
                                        <tr>
                                            <td>Dimensions</td>
                                            <td>{{ product.length }} x {{ product.width }} x {{ product.height }} in.</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card w_data_1">
                <div class="body">
                    <div class="w_icon indigo">
                        <i class="zmdi zmdi-store"></i>
                    </div>
                    <h4 class="mt-3">Quantity</h4>
                    <span class="text-muted">{{ product.quantity }}</span>
                    <div class="w_description text-{% if product.quantity > 0 %}success{% else %}danger{% endif %}">
                        <i class="zmdi zmdi-{% if product.quantity > 0 %}check{% else %}close{% endif %}"></i>
                        <span>{% if product.quantity > 0 %}In{% else %}Out Of{% endif %} Stock</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card w_data_1">
                <div class="body">
                    <div class="w_icon pink">
                        <i class="zmdi zmdi-star-circle"></i>
                    </div>
                    <h4 class="mt-3">Feature Status</h4>
                    <span class="text-muted">­</span>
                    <div class="w_description text-danger">
                        <i class="zmdi zmdi-trending-up"></i>
                        <span>{% if product.featured === 0 %} Not Featured {% else %} Featured {% endif %}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card w_data_1">
                <div class="body">
                    <div class="w_icon orange">
                        <i class="zmdi zmdi-shopping-cart"></i>
                    </div>
                    <h4 class="mt-3">Sale Status</h4>
                    <span class="text-muted">­</span>
                    <div class="w_description text-success">
                        <i class="zmdi zmdi-shopping-cart-plus"></i>
                        <span>{% if product.sale === 0 %} Not On Sale {% else %} On Sale {% endif %}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card w_data_1">
                <div class="body">
                    <div class="w_icon green">
                        <i class="zmdi zmdi-stop"></i>
                    </div>
                    <h4 class="mt-3">Product Status</h4>
                    <span class="text-muted">­</span>
                    <div class="w_description text-success">
                        <i class="zmdi zmdi-layers-off"></i>
                        <span>{% if product.status === 0 %} Inactive {% else %} Active {% endif %}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}