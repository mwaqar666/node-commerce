{% extends '../layout/master.njk' %}

{% block title %}View{% endblock %}

{% block parentPageTitle %}Product{% endblock %}

{% block content %}
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>Product</strong> View
                    </h2>
                </div>
                <div class="body">
                    <div class="row">
                        <div class="col-xl-3 col-lg-4 col-md-12">
                            <div class="preview preview-pic tab-content">
                                <div class="tab-pane active" id="primary-image">
                                    <img src="javascript:void(0)" class="img-fluid" alt>
                                </div>
                                <div class="tab-pane" id="product-1">
                                    <img src="javascript:void(0)" class="img-fluid" alt>
                                </div>
                            </div>
                            <ul class="preview thumbnail nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#primary-image">
                                        <img src="javascript:void(0)" alt>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#product-1">
                                        <img src="javascript:void(0)" alt>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-xl-9 col-lg-8 col-md-12">
                            <div class="product details">
                                <h3 class="product-title mb-0">Name</h3>
                                <p class="price mt-0">Current Price:
                                    <span class="col-amber">regular_price</span><span class="col-amber">discount_price</span>
                                </p>
                                <hr>
                                <p class="product-description">description</p>
                                <table class="table table-bordered" id="product-attributes" style="color: black">
                                    <tbody>
                                        <tr>
                                            <td>Weight</td>
                                            <td>weight lbs</td>
                                        </tr>
                                        <tr>
                                            <td>Dimensions</td>
                                            <td>length x width x height in.</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card w_data_1">
                <div class="body">
                    <div class="w_icon indigo">
                        <i class="zmdi zmdi-store"></i>
                    </div>
                    <h4 class="mt-3">Quantity</h4>
                    <span class="text-muted">quantity</span>
                    <div class="w_description text-success">
                        <i class="zmdi zmdi-check"></i>
                        <span>In Stock</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card w_data_1">
                <div class="body">
                    <div class="w_icon pink">
                        <i class="zmdi zmdi-star-circle"></i>
                    </div>
                    <h4 class="mt-3">Feature Status</h4>
                    <span class="text-muted">­</span>
                    <div class="w_description text-danger">
                        <i class="zmdi zmdi-trending-up"></i>
                        <span>Featured</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card w_data_1">
                <div class="body">
                    <div class="w_icon orange">
                        <i class="zmdi zmdi-shopping-cart"></i>
                    </div>
                    <h4 class="mt-3">Sale Status</h4>
                    <span class="text-muted">­</span>
                    <div class="w_description text-success">
                        <i class="zmdi zmdi-shopping-cart-plus"></i>
                        <span>In Sale</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card w_data_1">
                <div class="body">
                    <div class="w_icon green">
                        <i class="zmdi zmdi-stop"></i>
                    </div>
                    <h4 class="mt-3">Product Status</h4>
                    <span class="text-muted">­</span>
                    <div class="w_description text-success">
                        <i class="zmdi zmdi-layers-off"></i>
                        <span>Active</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}