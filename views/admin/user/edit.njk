{% extends '../layout/master.njk' %}

{% block title %}Edit{% endblock %}

{% block parentPageTitle %}User{% endblock %}

{% block pageStyle %}
    <link rel="stylesheet" href="/static/admin/plugins/bootstrap-select/css/bootstrap-select.css">
{% endblock %}

{% block content %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>User</strong> Edit
                    </h2>
                    <ul class="header-dropdown">
                        <li class="dropdown"><a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more"></i> </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="javascript:void(0)">Reset Fields</a>
                                </li>
                            </ul>
                        </li>
                        <li class="remove">
                            <a role="button" class="boxs-close">
                                <i class="zmdi zmdi-close"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <form action="javascript:void(0)" method="POST">
                        <h2 class="card-inside-title">User Name</h2>
                        <div class="row clearfix">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input id="user-first-name-edit" type="text" class="form-control" name="first_name" placeholder="First Name">
                                    <!-- <small class="text-danger">Error Message Here</small> -->
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input id="user-middle-name-edit" type="text" class="form-control" name="middle_name" placeholder="Middle Name">
                                    <!-- <small class="text-danger">Error Message Here</small> -->
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input id="user-last-name-edit" type="text" class="form-control" name="last_name" placeholder="Last Name">
                                    <!-- <small class="text-danger">Error Message Here</small> -->
                                </div>
                            </div>
                        </div>
                        <h2 class="card-inside-title">User E-Mail</h2>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input id="user-email-edit" type="email" class="form-control" name="email" placeholder="E-Mail">
                                    <!-- <small class="text-danger">Error Message Here</small> -->
                                </div>
                            </div>
                        </div>
                        <h2 class="card-inside-title">User Assigned Roles</h2>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <select name="roles[]" class="form-control show-tick" data-live-search="true" multiple>
                                    <option value="id" selected>role</option>
                                </select>
                                <!-- <small class="text-danger">Error Message Here</small> -->
                            </div>
                        </div>
                        <button class="mt-3 btn btn-raised btn-primary waves-effect" type="submit" style="width: 100%">Update Role</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}