{% extends '../layout/master.njk' %}

{% block title %}List{% endblock %}

{% block parentPageTitle %}User{% endblock %}

{% block pageStyle %}
    <link rel="stylesheet" href="plugins/jquery-datatable/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="plugins/sweetalert/sweetalert.css">
{% endblock %}

{% block content %}
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div class="header">
                    <h2>
                        <strong>User</strong> List
                    </h2>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped dataTable js-exportable" style="color: black">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>User ID</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Last Name</th>
                                    <th>E-Mail</th>
                                    <th>Roles</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr data-record-id="1">
                                    <td>1</td>
                                    <td>User ID</td>
                                    <td>First Name</td>
                                    <td>Middle Name</td>
                                    <td>Last Name</td>
                                    <td>E-Mail</td>
                                    <td>Roles</td>
                                    <td>
                                        <a href="javascript:void(0)" class="btn btn-primary btn-icon btn-icon-mini btn-round" data-edit>
                                            <i class="zmdi zmdi-edit"></i>
                                        </a>
                                        <a href="javascript:void(0)" class="btn btn-danger btn-icon btn-icon-mini btn-round" onclick="void(0)">
                                            <i class="zmdi zmdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>User ID</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Last Name</th>
                                    <th>E-Mail</th>
                                    <th>Roles</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pageScript %}
    <script src="bundles/datatablescripts.bundle.js"></script>
    <script src="plugins/jquery-datatable/buttons/dataTables.buttons.min.js"></script>
    <script src="plugins/jquery-datatable/buttons/buttons.bootstrap4.min.js"></script>
    <script src="plugins/jquery-datatable/buttons/buttons.colVis.min.js"></script>
    <script src="plugins/jquery-datatable/buttons/buttons.flash.min.js"></script>
    <script src="plugins/jquery-datatable/buttons/buttons.html5.min.js"></script>
    <script src="plugins/jquery-datatable/buttons/buttons.print.min.js"></script>
    <script src="plugins/jquery-datatable/buttons/buttons.pdf.min.js"></script>
    <script src="plugins/sweetalert/sweetalert.min.js"></script>
    <script src="plugins/axios/axios.min.js"></script>
    <script src="js/pages/tables/jquery-datatable.js"></script>

    <script>
        success('flashMessage');
    </script>

{% endblock %}