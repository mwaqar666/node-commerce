{% extends "../layout/app-layout.njk" %}

{% block content %}
    <!-- Breadcrumb -->
    <nav class="breadcrumb-section theme1 bg-lighten2 pt-110 pb-110">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title pb-4 text-dark text-capitalize">check out</h2>
                    </div>
                </div>
                <div class="col-12">
                    <ol class="breadcrumb bg-transparent m-0 p-0 align-items-center justify-content-center">
                        <li class="breadcrumb-item">
                            <a href="{{ route('app.home-1').path }}">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">check out</li>
                    </ol>
                </div>
            </div>
        </div>
    </nav>
    <!-- Breadcrumb -->

    <div class="check-out-section pt-80 pb-80">
        <div class="container">
            <form class="personal-information" method="POST" action="javascript:void(0)">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="billing-info-wrap">
                            <h3 class="title">Billing Details</h3>
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <div class="billing-info mb-20px">
                                        <label for="checkout-first-name">First Name</label>
                                        <input id="checkout-first-name" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="billing-info mb-20px">
                                        <label for="checkout-last-name">Last Name</label>
                                        <input id="checkout-last-name" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="billing-info mb-20px">
                                        <label for="checkout-email-address">Email Address</label>
                                        <input id="checkout-email-address" type="email">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="billing-info mb-20px">
                                        <label for="checkout-company-name">Company Name</label>
                                        <input id="checkout-company-name" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="billing-select mb-20px">
                                        <label for="checkout-country-name" class="form-label">Country</label>
                                        <select id="checkout-country-name" class="form-select mb-3">
                                            <option selected disabled>Select a country</option>
                                            <option>Azerbaijan</option>
                                            <option>Bahamas</option>
                                            <option>Bahrain</option>
                                            <option>Bangladesh</option>
                                            <option>Barbados</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="billing-select mb-20px">
                                        <label for="checkout-state-name" class="form-label">State</label>
                                        <select id="checkout-state-name" class="form-select mb-3">
                                            <option selected disabled>Select a state</option>
                                            <option>Illinois</option>
                                            <option>California</option>
                                            <option>Texas</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="billing-select mb-20px">
                                        <label for="checkout-city-name" class="form-label">City</label>
                                        <select id="checkout-city-name" class="form-select mb-3">
                                            <option selected disabled>Select a city</option>
                                            <option>San Francisco</option>
                                            <option>Chicago</option>
                                            <option>New York</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="billing-info mb-20px">
                                        <label for="checkout-street-address">Street Address</label>
                                        <input id="checkout-street-address" placeholder="House number and street name" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="billing-info mb-20px">
                                        <label for="checkout-appartment-suite">Apartment / Suite</label>
                                        <input id="checkout-appartment-suite" placeholder="Apartment, suite, unit etc." type="text">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="billing-info mb-20px">
                                        <label for="checkout-postcode">Postcode / ZIP</label>
                                        <input id="checkout-postcode" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="billing-info mb-20px">
                                        <label for="checkout-phone">Phone</label>
                                        <input id="checkout-phone" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="checkout-account mb-5">
                                <input id="checkout-create-account-check" class="checkout-toggle2" type="checkbox">
                                <label for="checkout-create-account-check">Create an account?</label>
                            </div>
                            <div class="checkout-account-toggle open-toggle2 mb-30">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <label for="checkout-password">Password</label>
                                        <input id="checkout-password" placeholder="Password" type="password">
                                    </div>
                                    <div class="col-lg-12">
                                        <label for="checkout-confirm-password">Password</label>
                                        <input id="checkout-confirm-password" placeholder="Confirm Password" type="password">
                                    </div>
                                </div>
                            </div>
                            <div class="additional-info-wrap">
                                <h4 class="title">Additional information</h4>
                                <div class="additional-info">
                                    <label for="checkout-additional-info" class="mb-2">Order notes</label>
                                    <textarea id="checkout-additional-info" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                </div>
                            </div>
                            <div class="checkout-account mt-25">
                                <input id="checkout-different-shipa-address-check" class="checkout-toggle" type="checkbox">
                                <label for="checkout-different-shipa-address-check">Ship to a different address?</label>
                            </div>
                            <div class="different-address open-toggle mt-30">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-info mb-20px">
                                            <label for="checkout-different-shipping-first-name">First Name</label>
                                            <input id="checkout-different-shipping-first-name" type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-info mb-20px">
                                            <label for="checkout-different-shipping-last-name">Last Name</label>
                                            <input id="checkout-different-shipping-last-name" type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="billing-info mb-20px">
                                            <label for="checkout-different-shipping-email-address">Email Address</label>
                                            <input id="checkout-different-shipping-email-address" type="email">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="billing-info mb-20px">
                                            <label for="checkout-different-shipping-company-name">Company Name</label>
                                            <input id="checkout-different-shipping-company-name" type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="billing-select mb-20px">
                                            <label for="checkout-different-shipping-country-name" class="form-label">Country</label>
                                            <select id="checkout-different-shipping-country-name" class="form-select mb-3">
                                                <option selected disabled>Select a country</option>
                                                <option>Azerbaijan</option>
                                                <option>Bahamas</option>
                                                <option>Bahrain</option>
                                                <option>Bangladesh</option>
                                                <option>Barbados</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-select mb-20px">
                                            <label for="checkout-different-shipping-state-name" class="form-label">State</label>
                                            <select id="checkout-different-shipping-state-name" class="form-select mb-3">
                                                <option selected disabled>Select a state</option>
                                                <option>Illinois</option>
                                                <option>California</option>
                                                <option>Texas</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-select mb-20px">
                                            <label for="checkout-different-shipping-city-name" class="form-label">City</label>
                                            <select id="checkout-different-shipping-city-name" class="form-select mb-3">
                                                <option selected disabled>Select a city</option>
                                                <option>San Francisco</option>
                                                <option>Chicago</option>
                                                <option>New York</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="billing-info mb-20px">
                                            <label for="checkout-different-shipping-street-address">Street Address</label>
                                            <input id="checkout-different-shipping-street-address" placeholder="House number and street name" type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="billing-info mb-20px">
                                            <label for="checkout-different-shipping-appartment-suite">Apartment / Suite</label>
                                            <input id="checkout-different-shipping-appartment-suite" placeholder="Apartment, suite, unit etc." type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-info mb-20px">
                                            <label for="checkout-different-shipping-postcode">Postcode / ZIP</label>
                                            <input id="checkout-different-shipping-postcode" type="text">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="billing-info mb-20px">
                                            <label for="checkout-different-shipping-phone">Phone</label>
                                            <input id="checkout-different-shipping-phone" type="text">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 mt-4 mt-lg-0">
                        <div class="your-order-area">
                            <h3 class="title">Your order</h3>
                            <div class="your-order-wrap gray-bg-4">
                                <div class="your-order-product-info">
                                    <div class="your-order-top">
                                        <ul>
                                            <li>Product</li>
                                            <li>Total</li>
                                        </ul>
                                    </div>
                                    <div class="your-order-middle">
                                        <ul>
                                            {% for times in range(5) %}
                                                <li>
                                                    <span class="order-middle-left">Product Name X 1</span>
                                                    <span class="order-price">$329 </span>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    <div class="your-order-bottom">
                                        <ul>
                                            <li class="your-order-shipping">Shipping</li>
                                            <li>Free shipping</li>
                                        </ul>
                                    </div>
                                    <div class="your-order-total">
                                        <ul>
                                            <li class="order-total">Total</li>
                                            <li>$329</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="payment-method">
                                    <div class="payment-accordion element-mrg">
                                        <div class="panel-group" id="accordion">
                                            <div class="panel payment-accordion">
                                                <div class="panel-heading" id="method-one">
                                                    <h4 class="panel-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#method1">Direct bank transfer</a>
                                                    </h4>
                                                </div>
                                                <div id="method1" class="panel-collapse collapse show">
                                                    <div class="panel-body">
                                                        <p>
                                                            Please send a check to Store Name, Store Street, Store
                                                            Town, Store State / County, Store Postcode.
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel payment-accordion">
                                                <div class="panel-heading" id="method-two">
                                                    <h4 class="panel-title">
                                                        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#method2">Check payments</a>
                                                    </h4>
                                                </div>
                                                <div id="method2" class="panel-collapse collapse">
                                                    <div class="panel-body">
                                                        <p>
                                                            Please send a check to Store Name, Store Street, Store
                                                            Town, Store State / County, Store Postcode.
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel payment-accordion">
                                                <div class="panel-heading" id="method-three">
                                                    <h4 class="panel-title">
                                                        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#method3">Cash on delivery</a>
                                                    </h4>
                                                </div>
                                                <div id="method3" class="panel-collapse collapse">
                                                    <div class="panel-body">
                                                        <p>
                                                            Please send a check to Store Name, Store Street, Store
                                                            Town, Store State / County, Store Postcode.
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="Place-order mt-25">
                                <button class="btn btn--xl theme-color btn-block btn-primary" type="submit">Place Order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}