                                    <a href="#">Bags & Cases (4)</a>
                                </li>
                            </ul>
                        </div>
                        <div class="sidebar-widget mb-30">
                            <h3 class="post-title">Recent Post</h3>
                            {% for times in range(5) %}
                                <div class="blog-media-list mb-30 media">
                                    <div class="post-thumb mr-4">
                                        <a href="#">
                                            <img src="app/img/blog-post/1.png" alt="img">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <h5 class="sub-title mb-1">
                                            <a href="{{ route('app.blog-7').path }}">This Is First Post </a>
                                        </h5>
                                        <span class="date"> Posted by HasTech</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="sidebar-widget">
                            <h3 class="post-title">Tags</h3>
                            <ul class="product-tag d-flex flex-wrap">
                                <li>
                                    <a href="#">cosmetics</a>
