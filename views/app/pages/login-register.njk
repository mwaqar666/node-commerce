{% extends "../layout/app-layout.njk" %}

{% block content %}
    <!-- Breadcrumb -->
    <nav class="breadcrumb-section theme1 bg-lighten2 pt-110 pb-110">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title pb-4 text-dark text-capitalize">login & register</h2>
                    </div>
                </div>
                <div class="col-12">
                    <ol class="breadcrumb bg-transparent m-0 p-0 align-items-center justify-content-center">
                        <li class="breadcrumb-item">
                            <a href="{{ route('app.home-1').path }}">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Log in to your account</li>
                    </ol>
                </div>
            </div>
        </div>
    </nav>
    <!-- Breadcrumb -->

    <div class="login-register-area pt-80 pb-80">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                    <div class="login-register-wrapper">
                        <div class="login-register-tab-list nav">
                            <a class="active" data-toggle="tab" href="#login-form">
                                <h4>login</h4>
                            </a>
                            <a data-toggle="tab" href="#register-form">
                                <h4>register</h4>
                            </a>
                        </div>
                        <div class="tab-content">
                            <div id="login-form" class="tab-pane active">
                                <div class="login-form-container">
                                    <div class="login-register-form">
                                        <form action="javascript:void(0)" method="POST">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <label for="login-email">E-Mail</label>
                                                    <input id="login-email" type="email">
                                                </div>
                                                <div class="col-lg-12">
                                                    <label for="login-password">Password</label>
                                                    <input id="login-password" type="password">
                                                </div>
                                                <div class="col-lg-12 button-box">
                                                    <div class="login-toggle-btn">
                                                        <input type="hidden" value="false">
                                                        <input id="login-remember-me" type="checkbox" value="true">
                                                        <label for="login-remember-me">Remember me</label>
                                                        <a href="#">Forgot Password?</a>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <button type="submit" class="btn btn-dark btn--lg" style="width: 100%">
                                                        <span>Login</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div id="register-form" class="tab-pane">
                                <div class="login-form-container">
                                    <div class="login-register-form">
                                        <form action="javascript:void(0)" method="POST">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <label for="register-first-name">First Name
                                                        <span class="required">*</span>
                                                    </label>
                                                    <input id="register-first-name" type="text">
                                                </div>
                                                <div class="col-lg-12">
                                                    <label for="register-last-name">Last Name
                                                        <span class="required">*</span>
                                                    </label>
                                                    <input id="register-last-name" type="text">
                                                </div>
                                                <div class="col-lg-12">
                                                    <label for="register-email">E-Mail
                                                        <span class="required">*</span>
                                                    </label>
                                                    <input id="register-email" type="email">
                                                </div>
                                                <div class="col-lg-12">
                                                    <label for="register-password">Password
                                                        <span class="required">*</span>
                                                    </label>
                                                    <input id="register-password" type="password">
                                                </div>
                                                <div class="col-lg-12">
                                                    <label for="register-confirm-password">Confirm Password
                                                        <span class="required">*</span>
                                                    </label>
                                                    <input id="register-confirm-password" type="password">
                                                </div>
                                                <div class="col-lg-12">
                                                    <button type="submit" class="btn btn-dark btn--lg" style="width: 100%">
                                                        <span>Register</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}